<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="newlife_hospital_appointment_tree_view" model="ir.ui.view">
            <field name="name">appointment</field>
            <field name="model">newlife_hospital.appointment</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="appointment_date"/>
                </tree>
            </field>
        </record>

        <record id="newlife_hospital_appointment_form_view" model="ir.ui.view">
            <field name="name">appointment</field>
            <field name="model">newlife_hospital.appointment</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button name="action_confirm" type="object" string="Confirm" class="btn-primary"
                                states="draft" confirm="Are you sure that you need to confirm ?"/>
                        <button name="action_done" type="object" string="Make As Done" class="btn-primary"
                                states="confirm"/>
                        <button name="action_draft" type="object" string="Make As draft" class="btn-primary"
                                states="cancel"/>
                        <button name="action_cancel" type="object" string="Cancel" states="draft,confirm,done"
                                confirm="Are you sure that you need to cancel ?"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="patient_id"/>
                                <field name="age"/>
                            </group>
                            <group>
                                <field name="gender" readonly="1" force_save="1"/>
                                <field name="appointment_date"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_newlife_hospital_appointment" model="ir.actions.act_window">
            <field name="name">appointment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">newlife_hospital.appointment</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="appointment_root" name="Appointment" parent="newlife_appointment_categ"
                  action="action_newlife_hospital_appointment" sequence="10"/>


    </data>
</odoo>