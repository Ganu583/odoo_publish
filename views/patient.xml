<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="newlife_hospital_patient_tree_view" model="ir.ui.view">
            <field name="name">patient</field>
            <field name="model">newlife_hospital.patient</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="age"/>
                    <field name="gender"/>
                </tree>
            </field>
        </record>

        <record id="newlife_hospital_patient_form_view" model="ir.ui.view">
            <field name="name">patient</field>
            <field name="model">newlife_hospital.patient</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button name="action_confirm" type="object" string="Confirm" class="btn-primary"
                                states="draft" confirm="Are you sure that you need to confirm ?"/>
                        <button name="action_done" type="object" string="Make As Done" class="btn-primary"
                                states="confirm"/>
                        <button name="action_draft" type="object" string="Make As draft" class="btn-primary"
                                states="cancel"/>
                        <button name="action_cancel" type="object" string="Cancel" states="draft,confirm,done" confirm="Are you sure that you need to cancel ?"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="reference" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="age"/>
                                <field name="appointment_count"/>
                            </group>
                            <group>
                                <field name="gender" invisible="context.get('hide_gender')"/>
                                <field name="note"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="newlife_hospital_patient_kanban_view" model="ir.ui.view">
            <field name="name">patient</field>
            <field name="model">newlife_hospital.patient</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_details oe_kanban_global_click">
                                <strong>
                                    NAME:
                                    <field name="name"/>
                                </strong>
                                <ul>
                                    <li>
                                        AGE:
                                        <field name="age"/>
                                    </li>
                                    <li>
                                        Gender:
                                        <field name="gender"/>
                                    </li>
                                </ul>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="newlife_hospital_patient_search_view" model="ir.ui.view">
            <field name="name">patient</field>
            <field name="model">newlife_hospital.patient</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="name"/>
                    <separator/>
                    <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                    <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
                    <filter string="Other" name="other" domain="[('gender', '=', 'other')]"/>
                    <group expand="1" string="Group by">
                        <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_newlife_hospital_patient" model="ir.actions.act_window">
            <field name="name">patient</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">newlife_hospital.patient</field>
            <!--            <field name="context">{'search_default_gender': 1 , 'search_default_male': 1}</field>-->
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="patient_categ_root" name="patient" parent="newlife_patient_categ"
                  action="action_newlife_hospital_patient" sequence="1"/>

    </data>
</odoo>