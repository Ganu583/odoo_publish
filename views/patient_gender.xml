<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_newlife_hospital_male" model="ir.actions.act_window">
            <field name="name">Male</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">newlife_hospital.patient</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'hide_gender': 1}</field>
            <field name="domain">[('gender', '=', 'male')]</field>
        </record>

       <record id="newlife_hospital_female" model="ir.actions.act_window">
           <field name="name">Female</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">newlife_hospital.patient</field>
           <field name="view_mode">tree,form</field>
           <field name="context">{'default_gender': 'female', 'hide_gender': 1}</field>
           <field name="domain">[('gender', '=', 'female')]</field>
       </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="male_patient_categ" name="Male Patient" parent="newlife_patient_categ" action="action_newlife_hospital_male" sequence="10"/>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="female_patient_categ_root" name="Female Patient" parent="newlife_patient_categ" action="newlife_hospital_female" sequence="20"/>




    </data>
</odoo>